@model IEnumerable<StudentModel>
@{
    ViewBag.Title = "Index";
}


    @*this link will send me to the form*@
    <a asp-action="Create" class="btn btn-primary">Create</a>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                
                <th>Age</th>
                <th>Email</th>
                <th></th>
            </tr>

        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="5">No Data</td>
                </tr>
            }
            else
            {
                foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.age</td>
                                <td>@item.Email</td>
                        <td>
                            <a class="btn btn-primary" href="/Student/details/@item.Id">details</a>
                            <a class="btn btn-primary" href="/Student/edit/@item.Id">Edit</a>
                            <a class="btn btn-primary" href="/Student/delete/@item.Id">Delete</a>
                        </td>
                        
                    </tr>
                }
            }
        </tbody>
    </table>

